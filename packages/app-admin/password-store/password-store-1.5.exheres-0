require password-store bash-completion zsh-completion

PLATFORMS="~amd64"

ZSH_COMPLETIONS=( 'src/completion/pass.zsh-completion _pass' )

src_install() {
    default

    edo rm -r "${IMAGE}"/usr/share/bash-completion/
    edo rmdir "${IMAGE}"/lib64

    dobashcompletion src/completion/pass.bash-completion password-store
    install-zsh-completions
}

