require password-store bash-completion zsh-completion

PLATFORMS="~amd64"

ZSH_COMPLETIONS=( 'contrib/pass.zsh-completion _pass' )

src_install() {
    default
    edo rm -r "${IMAGE}"/etc/bash_completion.d/
    edo rmdir "${IMAGE}"/{etc,lib64}

    dobashcompletion contrib/pass.bash-completion password-store
    install-zsh-completions
}

